<% if logged_in? %>

  <div class="row">
    
    <aside class="col-md-4">
      

      <%= form_for(@task) do |f| %>
        
        <div class="form-group">
          <%= f.label :content, "タスク" %>
          <%= f.text_area :content, class: "form-control", rows: 5 %>
        </div>
        
        <div class="form-group">
          <%= f.label :status, "ステータス" %>
          <%= f.text_field :status, class: "form-control" %>
        </div>
        
        <%= f.submit "投稿", class: "btn btn-primary btn-sm btn-block" %>
        
      <% end %>
        
    </aside>
    
    <div class="col-xs-8">
      <%= render "tasks/tasks", tasks: @tasks %>
    </div>
    
  </div>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcom to the Tasklists</h1>
      
      <%= link_to "新規登録", signup_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>