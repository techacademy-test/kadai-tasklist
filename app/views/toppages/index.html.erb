<% if logged_in? %>

  <div class="row">
    
    <aside class="col-md-4">
      

      <%= render "tasks/form", task: @task %>
        
    </aside>
    
    <div class="col-xs-8">
      <%= render "tasks/tasks", tasks: @tasks %>
    </div>
    
  </div>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcom to the Tasklists</h1>
      
      <%= link_to "新規登録", signup_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>