<ul class="media-list">
  
  <% tasks.each do |task| %>
  
    <li class="media">
      
      <div class="media-left">
        <img class="media-object imgrounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      </div>
      
      <div class="media-body">
        
        <div>
          <%= link_to task.user.name, user_path(task.user) %>
          <span class="text-muted">投稿時間:<%= task.created_at %></span>
        </div>
        
        <div>
          <p>
            <%= task.content %>
          </p>
        </div>
        
        <div>
          <% if current_user == task.user %>
            <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-xs" %>
          <% end %>
        </div>
        
      </div>
      
    </li>
    
  <% end %>
  
  <%= paginate tasks %>
  
</ul>